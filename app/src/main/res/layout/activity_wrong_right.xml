<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hackingismakingisengineering.com.languagepronunciationstudy.animation.WrongRightWordAnimationActivity"
    android:orientation="vertical">




    <TextView
        android:id="@+id/animation_right_wrong_textView"
        android:textSize="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="example" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/animation_right_wrong_button_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="right" />

        <Button
            android:id="@+id/animation_right_wrong_button_wrong"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wrong" />

    </LinearLayout>


</LinearLayout>

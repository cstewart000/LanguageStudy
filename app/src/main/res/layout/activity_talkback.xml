<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="hackingismakingisengineering.com.languagepronunciationstudy.animation.TalkbackActivity">









    <ImageView
        android:id="@+id/imageView"
        android:scaleType="centerInside"
        android:layout_width="188dp"
        android:layout_height="189dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/android_icon_512_squared"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/talkback_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Name" />

    <Button
        android:id="@+id/talkback_button_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="next English"
        android:layout_alignParentBottom="true"
         />

    <Button
        android:id="@+id/talkback_button_french"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="next French"
        android:layout_alignParentBottom="true"
        />

</LinearLayout>
